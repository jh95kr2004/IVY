<body class='open-sans'>
  <nav class="navbar navbar-toggleable-md navbar-light">
    <a class="navbar-brand" href="/">IVY</a>
    <!-- button for small size screen -->
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbarSupportedContent">
      <ul class="nav justify-content-end">
        <li class="nav-item active">
          <a class="nav-link" href="/consult">DASHBOARD</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/account">ACCOUNT</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">LOGOUT</a>
        </li>
      </ul>
    </div>
  </nav>
  <div id='mainContainer' class='container'>
    <div class="row justify-content-start">
      <div class='col'></div>
      <div class='col-12 col-md-10'>
        <div id='titleDiv' class='h1'><span id='studentName'><%- studentName %></span><span id='studentId' class='hidden'><%- studentId %></span> - <span id='title'>Interests</span></div>
        <div id='descriptionDiv' class='description'>You can write interests of student classifying by comma.</div>
        <div class='resultContainer' id='interestsDiv' spellcheck="false" autocomplete="off" autocorrect="off">
          <%- interests %><input id='interestInput'></input>
        </div>
        <div class='button-group' style='float: left'>
          <button type="button" class="btn btn-secondary btn-lg" id="removeAllButton">REMOVE ALL</button>
        </div>
        <div class='button-group' style='float: right'>
          <button type="button" class="btn btn-primary btn-lg rightAlign" id="saveButton">SAVE</button>
          <button type="button" class="btn btn-transparent btn-lg rightAlign" id="cancelButton">CANCEL</button>
        </div>
      </div>
      <div class='col'></div>
    </div>
  </div>
</body>
