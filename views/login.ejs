<body class='open-sans'>
  <nav class="navbar navbar-toggleable-md navbar-light">
    <a class="navbar-brand" href="/">IVY</a>
  </nav>
  <div id='mainContainer' class='container'>
    <div class='row'>
      <div class='col'></div>
      <div class='h3 col-12 col-md-5'>Sign In</div>
      <div class='col'></div>
    </div>
    <div class='row'>
      <div class='col'></div>
      <div id='loginDescription' class='col-12 col-md-5'><%- description %></div>
      <div class='col'></div>
    </div>
    <form method="post" action="/login">
      <div id='loginForm' class="form-group input-div">
        <div class="row">
          <div class='col'></div>
          <div class="col-12 col-md-5">
            <label for="email">Email</label>
            <input name="email" type="email" class="form-control" placeholder="Email" id="email" required>
          </div>
          <div class='col'></div>
        </div>
        <div class="row">
          <div class='col'></div>
          <div class="col-12 col-md-5">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Password" id="password" required>
          </div>
          <div class='col'></div>
        </div>
        <div class="row">
          <div class='col'></div>
          <div class='col-12 col-md-5'>
            <button type="submit" id="continueButton" class="btn btn-primary btn-lg rightAlign">CONTINUE</button>
          </div>
          <div class='col'></div>
        </div>
      </div>
    </form>
  </div>
</body>
