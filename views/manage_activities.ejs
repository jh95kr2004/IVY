<body class='open-sans'>
  <nav class="navbar navbar-toggleable-md navbar-light">
    <a class="navbar-brand" href="/">IVY</a>
    <!-- button for small size screen -->
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbarSupportedContent">
      <ul class="nav justify-content-end">
        <li class="nav-item active">
          <a class="nav-link" href="/consult">DASHBOARD</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/account">ACCOUNT</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">LOGOUT</a>
        </li>
      </ul>
    </div>
  </nav>
  <div id='mainContainer' class='container'>
    <div class="row justify-content-start">
      <div class='col'></div>
      <div class='col-12 col-md-10'>
        <div>
          <span class='h1'><span id='studentName'><%- studentName %></span><span id='studentId' class='hidden'><%- studentId %></span> - <span id='title'>Activities</span></span>
          <!--<input type="text" class="form-control search-input" id="searchBar" placeholder="Search">-->
        </div>
        <div class='resultContainer'>
          <table class='table table-hover'>
            <tbody><%- activities %></tbody>
          </table>
        </div>
        <div class='button-group' style='float: left'>
          <a href="/consult/manage/<%- studentId %>/activities/find" class="btn btn-primary btn-lg">ADD ACTIVITY</a>
          <button type="button" class="btn btn-transparent btn-lg" id="editButton" disabled>EDIT</button>
          <button type="button" class="btn btn-transparent btn-lg" data-toggle="modal" data-target="#removeModal" id="removeButton" disabled>REMOVE</button>
        </div>
        <div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="removeModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Remove Activity?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p>Are you sure you want to delete all data on this activity? This action cannot be undone.</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">CANCEL</button>
                <button type="button" class="btn btn btn-danger" id="removeActivityButton">REMOVE ACTIVITY</button>
              </div>
            </div>
          </div>
        </div>
        <div class='button-group' style='float: right'>
          <button type="button" class="btn btn-primary btn-lg" id="doneButton">DONE</button>
        </div>
      </div>
      <div class='col'></div>
    </div>
  </div>
</body>
